<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/poll_switch"
        app:layout_constraintTop_toTopOf="@+id/poll_switch">


        <EditText
            android:id="@+id/title_texbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/question_argument_edit"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/expiration_spinner"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:entries="@array/duration_array"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/duration_textView"
            app:layout_constraintStart_toStartOf="@+id/duration_textView"
            app:layout_constraintTop_toBottomOf="@+id/duration_textView" />

        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:entries="@array/gender_choose_array"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/category_spinner"
            app:layout_constraintEnd_toEndOf="@+id/reference_textView"
            app:layout_constraintStart_toEndOf="@+id/category_spinner"
            app:layout_constraintTop_toTopOf="@+id/category_spinner"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button"
            android:text="@string/new_question_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/title_texbox"
            app:layout_constraintStart_toStartOf="@+id/title_texbox"
            app:layout_constraintTop_toBottomOf="@+id/expiration_spinner"
            app:layout_constraintVertical_bias="1.0" />

        <Spinner
            android:id="@+id/region_spinner"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:entries="@array/region_array"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/region_textView"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="@+id/region_textView"
            app:layout_constraintTop_toBottomOf="@+id/region_textView" />

        <Button
            android:id="@+id/selectImages_newchat_button"
            android:layout_width="141dp"
            android:layout_height="49dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_button"
            android:text="@string/select_images"
            app:layout_constraintEnd_toStartOf="@+id/cover_imageView"
            app:layout_constraintStart_toStartOf="@+id/title_texbox"
            app:layout_constraintTop_toBottomOf="@+id/title_texbox" />

        <ImageView
            android:id="@+id/cover_imageView"
            android:layout_width="186dp"
            android:layout_height="172dp"
            android:contentDescription="@string/todo"
            app:layout_constraintBottom_toBottomOf="@+id/selectImages_newchat_button"
            app:layout_constraintEnd_toEndOf="@+id/title_texbox"
            app:layout_constraintStart_toEndOf="@+id/selectImages_newchat_button"
            app:layout_constraintTop_toTopOf="@+id/selectImages_newchat_button"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/chatCover_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_cover"
            app:layout_constraintBottom_toTopOf="@+id/cover_imageView"
            app:layout_constraintEnd_toEndOf="@+id/cover_imageView"
            app:layout_constraintStart_toStartOf="@+id/cover_imageView" />

        <TextView
            android:id="@+id/region_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/which_region_you_want_to_talk_to"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/duration_textView"
            app:layout_constraintEnd_toEndOf="@+id/title_texbox"
            app:layout_constraintStart_toStartOf="@+id/title_texbox"
            app:layout_constraintTop_toBottomOf="@+id/gender_spinner" />

        <TextView
            android:id="@+id/duration_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_long_should_the_chat_last"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/create_button"
            app:layout_constraintEnd_toEndOf="@+id/title_texbox"
            app:layout_constraintStart_toStartOf="@+id/title_texbox"
            app:layout_constraintTop_toBottomOf="@+id/region_spinner" />

        <TextView
            android:id="@+id/reference_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reference_categories_and_sex"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/region_textView"
            app:layout_constraintEnd_toEndOf="@+id/title_texbox"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/title_texbox"
            app:layout_constraintTop_toBottomOf="@+id/selectImages_newchat_button" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginEnd="20dp"
            android:entries="@array/categories"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/gender_spinner"
            app:layout_constraintStart_toStartOf="@+id/reference_textView"
            app:layout_constraintTop_toBottomOf="@+id/reference_textView" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>