<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp">

    <TextView
        android:id="@+id/txtOtherUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:text="John Doe"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtOtherMessage"
        app:layout_constraintStart_toEndOf="@+id/other_image_chat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOtherMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/other_chat_shape"
        android:elevation="5dp"
        android:maxWidth="240dp"
        android:padding="15dp"
        android:text="Other message"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtOtherUser"
        app:layout_constraintTop_toBottomOf="@+id/txtOtherUser"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtOtherMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 PM"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtOtherMessage"
        app:layout_constraintLeft_toRightOf="@+id/txtOtherMessage"
        app:layout_constraintTop_toTopOf="@+id/txtOtherMessage"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/other_image_chat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="3dp"
        android:background="@drawable/default_picture"
        app:layout_constraintBottom_toBottomOf="@+id/txtOtherMessage"
        app:layout_constraintEnd_toStartOf="@+id/txtOtherUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtOtherUser" />

</androidx.constraintlayout.widget.ConstraintLayout>