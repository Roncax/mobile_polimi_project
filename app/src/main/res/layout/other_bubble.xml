<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp">

    <TextView
        android:id="@+id/txtOtherUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:inputType="text"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtOtherMessage"
        app:layout_constraintStart_toEndOf="@+id/other_image_chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="Paolo Roncaglioni" />

    <TextView
        android:id="@+id/txtOtherMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/other_chat_shape"
        android:padding="15dp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtOtherMessageTime"
        app:layout_constraintHeight_max="wrap"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/txtOtherUser"
        app:layout_constraintTop_toBottomOf="@+id/txtOtherUser"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_max="250dp"
        tools:text="Other message" />

    <TextView
        android:id="@+id/txtOtherMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtOtherMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtOtherMessage"
        app:layout_constraintTop_toTopOf="@+id/txtOtherMessage"
        app:layout_constraintVertical_bias="1.0"
        tools:text="12:00 PM" />

    <ImageView
        android:id="@+id/other_image_chat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_person"
        app:layout_constraintBottom_toBottomOf="@+id/txtOtherMessage"
        app:layout_constraintEnd_toStartOf="@+id/txtOtherUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtOtherUser" />

</androidx.constraintlayout.widget.ConstraintLayout>