<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/email_register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/first_pw_text"
            app:layout_constraintEnd_toEndOf="@+id/categories_button"
            app:layout_constraintStart_toStartOf="@+id/country_spinner"
            app:layout_constraintTop_toBottomOf="@+id/categories_button" />

        <EditText
            android:id="@+id/first_pw_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/nickname_text"
            app:layout_constraintEnd_toEndOf="@+id/email_register_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/email_register_text"
            app:layout_constraintTop_toBottomOf="@+id/email_register_text" />

        <EditText
            android:id="@+id/nickname_text"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="Nickname"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/register_button"
            app:layout_constraintEnd_toEndOf="@+id/first_pw_text"
            app:layout_constraintStart_toStartOf="@+id/first_pw_text"
            app:layout_constraintTop_toBottomOf="@+id/first_pw_text" />


        <ImageView
            android:id="@+id/add_image_register_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/default_picture"
            android:contextClickable="true"
            android:gravity="center_vertical|center_horizontal"
            android:scaleType="fitStart"
            android:text="@string/add_image_button"
            android:textAlignment="center"
            android:textColor="#121010"
            app:layout_constraintBottom_toTopOf="@+id/age_register_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/round_button"
            tools:srcCompat="@drawable/round_button" />

        <com.hbb20.CountryCodePicker
            android:id="@+id/country_spinner"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:ccp_countryPreference="IT,GB,FR,US,DE"
            app:ccp_showFullName="true"
            app:ccp_showNameCode="false"
            app:ccp_showPhoneCode="false"
            app:layout_constraintBottom_toTopOf="@+id/email_register_text"
            app:layout_constraintEnd_toStartOf="@+id/categories_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/age_register_text">

        </com.hbb20.CountryCodePicker>

        <Button
            android:id="@+id/register_button"
            android:layout_width="277dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@drawable/rounded_button"
            android:text="@string/register_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/nickname_text"
            app:layout_constraintStart_toStartOf="@+id/nickname_text"
            app:layout_constraintTop_toBottomOf="@+id/nickname_text" />

        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="124dp"
            android:layout_height="0dp"
            android:entries="@array/gender_array"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/age_register_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/age_register_text"
            app:layout_constraintTop_toTopOf="@+id/age_register_text"
            tools:visibility="visible" />

        <Button
            android:id="@+id/categories_button"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_button"
            android:text="Categories"
            app:layout_constraintBottom_toBottomOf="@+id/country_spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/country_spinner"
            app:layout_constraintTop_toTopOf="@+id/country_spinner" />

        <EditText
            android:id="@+id/age_register_text"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Age"
            android:inputType="number"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/country_spinner"
            app:layout_constraintEnd_toStartOf="@+id/gender_spinner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_image_register_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>