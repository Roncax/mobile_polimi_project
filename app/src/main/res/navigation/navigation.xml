<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.iadvice.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment">

        <action
            android:id="@+id/action_loginFragment_to_chatActivity"
            app:destination="@id/chatActivity" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <activity
        android:id="@+id/chatActivity"
        android:name="com.example.iadvice.chat.ChatActivity"
        android:label="activity_chat"
        tools:layout="@layout/activity_chat" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.iadvice.login.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/register_fragment">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.iadvice.Home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.iadvice.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/your_questions_fragment"
        android:name="com.example.iadvice.Home.your_questions_fragment"
        android:label="your_questions_fragment"
        tools:layout="@layout/your_questions_fragment">
        <action
            android:id="@+id/action_your_questions_fragment_to_newQuestionFragment"
            app:destination="@id/newQuestionFragment" />
    </fragment>

    <fragment
        android:id="@+id/newQuestionFragment"
        android:name="com.example.iadvice.NewQuestionFragment"
        android:label="newQuestionFragment"
        tools:layout="@layout/new_question_fragment"/>
</navigation>